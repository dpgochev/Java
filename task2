
public class PatterMatch {

	public static boolean match(String s, String p)
	
	{
		char star='*';
		String st="" + star;
		
		char question='?';
		String que=""+question;
		
	if(p.contains(que))
	{
		int index=p.indexOf(question);
		return match(s.substring(0,index-1),p.substring(0, index-1))& match(s.substring(index+1),p.substring( index+1));
		
	}
	
	if(p.contains(st))
	{
		int index=p.indexOf(star);
		String rest1=s.substring(index+1);
		String rest2=p.substring(index+1);
		return match(s.substring(0,index),p.substring(0, index))&(rest1.contains(rest2));
		
	}
	
	if(s.contains(p))
	{
		return true;
	}
	
	else
		return false;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String a="abcdef";
		String b="d?";
		System.out.println(match(a,b));
 
	}

}
