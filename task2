public class PatternMatcher {

	public static boolean match(String s, String p)
	
	{
		char star='*';
		String st="" + star;
		
		char question='?';
		String que=""+question;
		
		if(p.isEmpty())
			return true;
		
	if(p.contains(que))
	{
		int index=p.indexOf(question);
		
		String first=p.substring(0, index-1);
		int fir=s.indexOf(first);
		String second=p.substring(index+1);
		int sec=s.indexOf(second);
		System.out.println(sec);
		if(s.contains(first)& s.contains(second)&(fir<sec||sec==0))
		{
			
			return match(s,first)& match(s,second);
		}
		
		else
			return false;
		
	}
	
	if(p.contains(st))
	{
		int index=p.indexOf(star);
		String first=p.substring(0, index-1);
		int fir=s.indexOf(first);
		String second=p.substring(index+1);
		int sec=s.indexOf(second);
		System.out.println(sec);
		if(s.contains(first)& s.contains(second)&(fir<sec||sec==0))
		{
			
			return match(s,first)& match(s,second);
		}
		
		else
			return false;
		
	}
	
	if(s.contains(p))
	{
		return true;
	}
	
	else
		return false;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String a="abcdefAAAA";
		String b="de*";
		System.out.println(match(a,b));
		
		 
 
	}

}
